<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd
       ">

    <dubbo:application name="test-dubbo-gateway" />

    <bean id="referenceTemplate" class="com.alibaba.dubbo.config.ReferenceConfig" >
        <property name="protocol" value="dubbo" />
    </bean>

    <bean id="serviceTemplate" class="com.alibaba.dubbo.config.ServiceConfig" >
        <property name="protocol" value="rest" />
    </bean>

    <bean class="org.dracula.test.dubbo.gateway.scanner.MyScannerConfigurer" >
        <property name="basePackage" value="org.dracula.test.dubbo.gateway.example" />
        <property name="referenceConfigTemplate" ref="referenceTemplate" />
        <property name="serviceConfigTemplate" ref="serviceTemplate" />
    </bean>

    <dubbo:protocol name="dubbo" port="20881" />
    <dubbo:protocol name="rest" port="8080" />

    <!-- for provider -->
    <dubbo:registry address="zookeeper://localhost:2181" />

</beans>